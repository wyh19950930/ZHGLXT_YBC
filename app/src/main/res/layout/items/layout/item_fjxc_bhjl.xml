<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_fjxc_bhjl_bhcs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#77FF9400"
        android:gravity="center"
        android:text="第一次驳回"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/ll_item_fjxc_bhjl_bhcs"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="处理文件"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_item_bhxx_fjxc_bhjl"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:minHeight="35dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="right"
                android:minWidth="100dp"
                android:maxWidth="100dp"
                style="@style/competent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驳回原因:" />


            <TextView
                android:id="@+id/et_item_fjxc_bhjl_bhxx_wtms"
                android:background="@drawable/shape_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                style="@style/blue_check_box"
                android:minWidth="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:minHeight="35dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="right"
                android:minWidth="100dp"
                android:maxWidth="100dp"
                style="@style/competent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驳回时间:" />


            <TextView
                android:id="@+id/et_item_fjxc_bhjl_bhxx_bhsj"
                android:background="@drawable/shape_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                style="@style/blue_check_box"
                android:minWidth="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:minHeight="35dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="right"
                android:minWidth="100dp"
                android:maxWidth="100dp"
                style="@style/competent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驳回人:" />


            <TextView
                android:id="@+id/et_item_fjxc_bhjl_bhxx_bhr"
                android:background="@drawable/shape_gray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                style="@style/blue_check_box"
                android:minWidth="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

