<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item_rklb_list"
        android:background="@drawable/mapback_ffffff"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_item_rklb_ldname"
                android:textSize="16sp"
                android:textColor="#333333"
                android:text="张小丽"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_rklb_iphone"
                android:layout_marginLeft="18dp"
                android:text="158 1010 1212"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/tv_item_rklb_mph"
                android:textSize="12sp"
                android:textColor="#FF660F"
                android:text="门牌号：12-21"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="从事行业:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_rklb_hylx"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#333333"
                android:text="教师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/blue"
                android:id="@+id/tv_item_rklb_djrq"
                android:text="日期: 2022-01-12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7.5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="户籍地址:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_rklb_hjdz"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="#333333"
                android:text="河北省邯郸市某镇某小区"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="34.5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_item_rklb_update"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="修改"
                android:textSize="16sp"
                android:textColor="#FF660F"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="18dp"
                android:background="#e0e0e0"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_item_rklb_delete"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="删除"
                android:textSize="16sp"
                android:textColor="#FF5458"
                />
            <TextView
                android:id="@+id/tv_item_rklb_lc"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="流出"
                android:textSize="16sp"
                android:textColor="#9CCC3D"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F6F7FB"/>

</LinearLayout>