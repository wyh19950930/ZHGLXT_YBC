<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#333333"
                android:id="@+id/tv_item_act_ajlb_title"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:text="北臧村镇皮各庄村乱收停车费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/tv_item_act_ajlb_jjaj"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ajlb_jjaj" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="市级"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_item_act_ajlb_zsd"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_item_act_ajlb_zsd1"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>

            </RelativeLayout>
            <TextView
                android:layout_marginLeft="15dp"
                android:drawablePadding="5dp"
                android:text="区级"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_item_act_ajlb_quzsd"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_item_act_ajlb_quzsd1"
                    android:layout_width="9dp"
                    android:layout_height="9dp"/>

            </RelativeLayout>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_item_act_ajlb_xysj"
                android:textColor="#333333"
                android:text="剩余时间:23小时"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_act_ajlb_gdbh"
                android:textColor="#666666"
                android:text="工单编号:兴【2022】-039482"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_item_act_ajlb_ajlx"
                android:textColor="#666666"
                android:text="案件类型:区级分转"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#DDDDDD"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>

</LinearLayout>