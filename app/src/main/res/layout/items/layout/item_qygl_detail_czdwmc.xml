<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:minHeight="35dp"
        android:gravity="center_vertical"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_qygl_detail_czdw_qymc"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="北京城南物业城南物业"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_item_qygl_detail_czdw_sfzy"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="#12C483"
            android:text="·在业"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_item_qygl_detail_czdw_lxr"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="联系人:张小亮"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7.5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_qygl_detail_czdw_zclx"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="北京市大兴区奥宇大厦"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#999999"
            android:text="查看更多>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="12dp"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>