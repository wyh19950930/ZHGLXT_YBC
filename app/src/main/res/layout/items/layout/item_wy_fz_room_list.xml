<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swlt_item_wy_fz_room_list"
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:src="@drawable/room_item_icon" />

            <LinearLayout
                android:id="@+id/ll_item_wy_fz_room_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_wy_fz_room_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间编号"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/iv_item_wy_fz_room_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/room_item_dxs_icon" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_item_wy_fz_room_list"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="13.5dp"
                android:background="@drawable/bt_actiive_4ca2fe_r20"
                android:text="查看"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_wy_fz_room_list_det"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:background="#D63A3B"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</LinearLayout>