<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_item_ydlr_act_fwxx"
        style="@style/table_title_textview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center_vertical"
            style="@style/table_title_textview"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
<!--            android:digits="1234567890."-->
<!--            android:inputType="number"-->
            <TextView
                android:textColor="@color/black"

                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                style="@style/table_title_textview"
                android:text="房屋面积"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:id="@+id/tv_item_ydlr_act_fwmj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginRight="3dp"
                android:text="㎡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            style="@style/table_title_textview"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                style="@style/table_title_textview"
                android:text="房屋层数"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
<!--            android:digits="1234567890."-->
<!--            android:inputType="number"-->
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_item_ydlr_act_fwcs"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginRight="3dp"
                android:text="层"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            style="@style/table_title_textview"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                style="@style/table_title_textview"
                android:text="房屋高度"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
<!--            android:digits="1234567890."-->
<!--            android:inputType="number"-->
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_item_ydlr_act_fwgd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginRight="3dp"
                android:text="m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_item_ydlr_act_fwxx_add"
        android:textSize="16sp"
        android:gravity="center"
        android:text="添加"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>