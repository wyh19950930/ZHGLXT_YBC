<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="40dp">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_item_shzl_wjdc_xuan_dui"
        android:src="@drawable/progress_blue"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <CheckBox
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:text="选择"
        android:id="@+id/tv_item_wjdc_xuan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:visibility="gone"
        android:minWidth="50dp"
        android:id="@+id/et_item_wjdc_xuan_qt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_item_wjdc_xuan_remark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:textSize="15sp"
            android:text="(需"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="number|numberDecimal"
            android:maxLength="11"
            android:id="@+id/et_item_wjdc_xuan_area"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="15sp"
            android:text="亩,用途"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_item_wjdc_xuan_remark"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="15sp"
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>