<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_up_file">

            <TextView
                android:id="@+id/tv_wy_cz_czxx_file_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:text="xxx"
                android:textColor="#999999"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_wy_cz_czxx_file"
                android:layout_width="150dp"
                android:layout_height="100dp" />
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_wy_cz_czxx_file_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/ic_error_cha1" />


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlt_wy_cz_czxx_file"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pic_upload_bottom_radius" />

            <TextView
                android:id="@+id/tv_wy_cz_czxx_file_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="身份证正面"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>