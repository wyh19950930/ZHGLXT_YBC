<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlt_act_ldrk_detail_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ldrkgl.home.activity.LdrkDetailActivity">
<!--    RelativeLayout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:id="@+id/tv_act_ldrk_detail_back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:text="出租房详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoShadowHeight="4dp"
        app:umanoFadeColor="#00ffffff"
        android:gravity="bottom"
        sothree:umanoOverlay="true"
        android:id="@+id/supl_ldrk_detail_act"
        android:background="@color/white">
        <com.amap.api.maps2d.MapView
            android:layout_marginTop="44dp"
            android:id="@+id/map_act_ldrk_detail"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>
        <!--        android:layout_marginTop="224dp"-->
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:id="@+id/slv_ldrk_detail_act"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_act_ldrk_detail_czfwjldrk"
                        android:background="@drawable/mapback_ffffff"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <View
                                android:layout_margin="10dp"
                                android:background="#409EFF"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:text="出租房屋及流动人口信息"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:minHeight="144dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/iv_act_ldrk_detail_ewmfh"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"/>
                                <LinearLayout
                                    android:id="@+id/ll_act_ldrk_detail_smewm"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/bg_border_stroke"
                                    android:orientation="vertical"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp">
                                    <TextView
                                        android:textColor="#409EFF"
                                        android:textSize="16sp"
                                        android:text="扫码绑定"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:layout_marginTop="2dp"
                                        android:textSize="12sp"
                                        android:textColor="#666666"
                                        android:text="宅基地二维码"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <View
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/gray"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="户  名"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_name"
                                        android:textColor="#333333"
                                        android:layout_marginLeft="20dp"
                                        android:text="XXX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="2dp"
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="门牌号"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_mph"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="20dp"
                                        android:text="XX-XX"
                                        android:textColor="#333333" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="2dp"
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="已出租房"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_yczf"
                                        android:textColor="#333333"
                                        android:layout_marginLeft="20dp"
                                        android:text="XX间"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="2dp"
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="居住人数"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_jzrs"
                                        android:textColor="#333333"
                                        android:layout_marginLeft="20dp"
                                        android:text="XX人"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="2dp"
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="机动车"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_jdc"
                                        android:textColor="#333333"
                                        android:layout_marginLeft="20dp"
                                        android:text="X辆"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="2dp"
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="电动车"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_ddc"
                                        android:textColor="#333333"
                                        android:layout_marginLeft="20dp"
                                        android:text="X辆"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="2dp"
                                    android:background="#F7F7F7"
                                    android:layout_marginLeft="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="摩托车"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tv_act_ldrk_detail_mtc"
                                        android:textColor="#333333"
                                        android:layout_marginLeft="20dp"
                                        android:text="X辆"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_act_ldrk_detail_message"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <ImageView
                                android:src="@drawable/message_lddetail"
                                android:layout_width="13dp"
                                android:layout_height="13dp"/>
                            <TextView
                                android:layout_marginLeft="3dp"
                                android:textColor="#409EFF"
                                android:text="发布消息"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_act_ldrk_detail_rkqk"
                        android:layout_marginBottom="64dp"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/ll_act_ldrk_detail_czfwjldrk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mapback_ffffff">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <View
                                android:layout_margin="10dp"
                                android:background="#409EFF"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:text="人口情况"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <RelativeLayout
                            android:descendantFocusability="blocksDescendants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_weight="1"
                                android:id="@+id/rlv_act_ldrk_detail_rkqk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_act_ldrk_detail_add"
                android:padding="14dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <TextView
                    android:id="@+id/tv_act_ldrk_detail_add"
                    android:gravity="center"
                    android:background="@drawable/mapback_ff660f"
                    android:textColor="@color/white"
                    android:text="+ 人员流入"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</LinearLayout>