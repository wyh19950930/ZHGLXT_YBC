<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_pop_td_tdsq"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="退单申请"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/icon_zj_error"
            android:id="@+id/iv_pop_td_error"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="8dp"
            android:textColor="#333333"
            android:id="@+id/tv_pop_td_tdyy"
            android:hint="退单原因:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_pop_td_tdyy"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="top"
            android:background="@null"
            android:minHeight="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_pop_td_sure"
        android:textColor="@color/white"
        android:background="@drawable/bt_actiive_409eff"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:layout_width="66dp"
        android:layout_height="31dp"/>


</LinearLayout>