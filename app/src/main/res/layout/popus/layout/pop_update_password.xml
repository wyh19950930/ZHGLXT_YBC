<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mapback_ffffff">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="44dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="修改密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginRight="29dp"
        android:layout_marginLeft="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <ImageView
                android:src="@drawable/phone_me"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <EditText
                android:focusable="false"
                android:id="@+id/et_pop_update_pass_sjh"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <ImageView
                android:src="@drawable/code_me"
                android:layout_width="15dp"
                android:layout_height="20dp"/>
            <EditText
                android:id="@+id/et_pop_update_pass_newpass"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入新密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <ImageView
                android:src="@drawable/code_me"
                android:layout_width="15dp"
                android:layout_height="20dp"/>
            <EditText
                android:id="@+id/et_pop_update_pass_sryzm"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_pop_update_pass_hqyzm"
                android:textColor="#409EFF"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <ImageView
                android:src="@drawable/password_me"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <EditText
                android:id="@+id/et_pop_update_pass_xmm"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请确认新密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="50dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_pop_password_sure"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#409EFF"
            android:text="确认"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:background="@color/gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_pop_password_cancel"
            android:textSize="16sp"
            android:gravity="center"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
