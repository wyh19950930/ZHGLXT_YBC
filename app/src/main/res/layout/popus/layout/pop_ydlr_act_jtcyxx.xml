<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/popback"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_pop_ydlr_act_jtcyxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:text="家庭成员信息"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>
                <LinearLayout
                    android:id="@+id/ll_pop_ydlr_act_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="姓名:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tv_pop_ydlr_act_name"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:hint="请输入姓名"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pop_ydlr_act_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="年龄:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:maxLength="3"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:id="@+id/tv_pop_ydlr_act_age"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:hint="请输入年龄"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pop_ydlr_act_yhzgx"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="与户主关系:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_pop_ydlr_act_yhzgx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:spinnerMode="dialog"
                        android:textSize="15sp" />
                    <!-- <EditText
                         android:id="@+id/tv_pop_ydlr_act_yhzgx"
                         android:layout_width="0dp"
                         android:layout_height="50dp"
                         android:layout_marginBottom="8dp"
                         android:layout_weight="2"
                         android:clickable="true"
                         android:hint="请输入与户主关系"
                         android:textSize="15sp" />-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pop_ydlr_act_yxsfzjh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="有效身份证件号:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:maxLength="18"
                        android:inputType="number|textMultiLine"
                        android:digits="1234567890Xx"
                        android:id="@+id/tv_pop_ydlr_act_yxsfzjh"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:hint="请输入有效身份证件号"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pop_ydlr_act_hkszd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="户口所在地:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tv_pop_ydlr_act_hkszd"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:hint="请输入户口所在地"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pop_ydlr_act_hkxz"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="户口性质:"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:spinnerMode="dialog"
                        android:id="@+id/sp_pop_ydlr_act_hkxz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:textSize="15sp" />
                    <!--<EditText
                        android:id="@+id/tv_pop_ydlr_act_hkxz"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:hint="请输入户口性质"
                        android:textSize="15sp" />-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_environmental2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_pop_ydlr_act_jtcyxx">

                <Button
                    android:id="@+id/bt_pop_ydlr_act_jtcyxx_clear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:text="关闭" />
                <Button
                    android:id="@+id/bt_pop_ydlr_act_jtcyxx_sure"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/state_on"
                    android:text="确定"
                    android:textColor="@color/white" />
                <!--            确定-->
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</RelativeLayout>