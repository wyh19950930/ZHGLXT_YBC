<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_pop_point_reminder_title"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="查看"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_pop_point_reminder_error"
            android:padding="13dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_zj_error"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.jymj.zhglxt.widget.zdybj.TextListLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tll_pop_point_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="17dp" />
    <TextView
        android:background="@color/gray"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="17dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="文件查看"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_pop_poitn_reminder"
        android:layout_marginLeft="15.5dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>