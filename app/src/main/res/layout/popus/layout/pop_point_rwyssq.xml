<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="220dp"
        android:layout_height="40dp">
        <TextView
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="文件上传"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_pop_point_rwyssq_error"
            android:padding="13dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_zj_error"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17.5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_pop_point_rwyssq_scwd"
                android:src="@drawable/icon_zlsc_scwd"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="上传文档"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_pop_point_rwyssq_scyp"
                android:src="@drawable/icon_zlsc_scyp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="上传音频"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/tv_pop_point_rwyssq"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/mapback_449eef"
        android:text="取消"
        android:layout_width="70dp"
        android:layout_height="wrap_content"/>

</LinearLayout>