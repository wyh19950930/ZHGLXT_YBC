<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="土地证信息"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="284dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jymj.zhglxt.widget.zdybj.ZdyEditLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_key="土地使用人"
                app:attr_hint="请输入土地使用人"
                android:id="@+id/zel_pop_ydqk_tdsyr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyEditLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_key="土地性质"
                app:attr_hint="请输入土地性质"
                android:id="@+id/zel_pop_ydqk_tdxz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyTextLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_arrows="@drawable/back_right_icon"
                app:attr_key="权属情况"
                app:attr_hint="请选择"
                app:attr_isfloat="true"
                android:id="@+id/ztl_pop_ydqk_qsqk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyTextLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_key="土地取得年限"
                app:attr_hint="请输入土地取得年限"
                android:id="@+id/zel_pop_ydqk_tdqdnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyTextLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_key="土地剩余使用年限"
                app:attr_hint="请输入土地剩余使用年限"
                android:id="@+id/zel_pop_ydqk_tdsyqdnx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyEditLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_isfloat="true"
                app:attr_key="土地价格(万元/亩)"
                app:attr_hint="请输入土地价格"
                android:id="@+id/zel_pop_ydqk_tdjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyEditLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_isfloat="true"
                app:attr_key="土地证面积(公顷)"
                app:attr_hint="请输入土地证面积"
                android:id="@+id/zel_pop_ydqk_tdzmj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.jymj.zhglxt.widget.zdybj.ZdyEditLayout
                android:layout_marginRight="15.5dp"
                android:layout_marginLeft="15dp"
                app:attr_key="土地取得方式"
                app:attr_hint="请输入土地取得方式"
                android:id="@+id/zel_pop_ydqk_tdqdfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/view_pop_ydqk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="证件上传"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_pop_ydqk_zjsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#4CA2FE"
            android:id="@+id/but_pop_ydqk_sure"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="确定"
            android:layout_width="0dp"
            android:layout_height="35dp"/>
        <View
            android:background="#E0E0E0"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="8dp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:textColor="#999999"
            android:id="@+id/but_pop_ydqk_close"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="取消"
            android:layout_width="0dp"
            android:layout_height="35dp"/>

    </LinearLayout>

</LinearLayout>