<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jymj.zhglxt.zjd.fragment.ZjdYdFragment">
    <ScrollView
        android:id="@+id/slv_frag_zjd_tdqs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <View
                    android:layout_margin="10dp"
                    android:background="#409EFF"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="土地权属统计情况"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.jymj.zhglxt.widget.zdybj.ZdyTextLayout_1
                    app:attr_key="村域内2000年以来土地征占情况"
                    app:attr_hint=""
                    android:id="@+id/tv_frag_tdqs_xzsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"/>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一、征地情况（亩，万元）"
                    android:textSize="15sp"
                    android:textColor="#4CA2FE"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二、占地情况（亩，万元）"
                    android:textSize="15sp"
                    android:textColor="#4CA2FE"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

            <HorizontalScrollView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            style="@style/table_title_textview"
                            android:text="编号"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            style="@style/table_title_textview"
                            android:text="用地类型"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            style="@style/table_title_textview"
                            android:text="占地面积(亩)"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            style="@style/table_title_textview"
                            android:text="使用情况"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            style="@style/table_title_textview"
                            android:text="平均流转(元/亩)或出租(万元/宗)价格"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            style="@style/table_title_textview"
                            android:text="备注"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>




                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>



    </ScrollView>

</LinearLayout>
