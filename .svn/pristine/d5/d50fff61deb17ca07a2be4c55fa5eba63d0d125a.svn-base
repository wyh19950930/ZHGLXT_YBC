<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_pop_point_select_title"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="请选择分户"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rlv_select_num"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_point_select_num_cancel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/bt_actiive_blue"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>