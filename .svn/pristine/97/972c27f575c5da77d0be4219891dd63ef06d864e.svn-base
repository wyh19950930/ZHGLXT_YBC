<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_environmental"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mapback_ffffff"
        android:padding="10dp">
        <TextView
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center"
            android:text="退回"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>
        <LinearLayout
            android:id="@+id/ll_thyy_environmental"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="退回原因:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_thyy_environmental"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="2"
                android:clickable="true"
                android:hint="请输入退回原因"
                android:textSize="15sp" />
        </LinearLayout>
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/bt_nyth_environmental"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>