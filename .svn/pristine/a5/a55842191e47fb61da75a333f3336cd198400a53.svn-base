<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/bt_actiive_xaiyoubai_white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bcjc_nyjtjcb_xh"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="01"
            android:textSize="40dp"
            android:textColor="#409EFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_bcjc_nyjtjcb_add"
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bcjc_nyjtjcb_add"
                android:textColor="#3D3D3D"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="填写农户家庭信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bcjc_nyjtjcb_info"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bcjc_nyjtjcb_wjbh"
                android:textSize="12sp"
                android:textColor="#409EFF"
                android:text="问卷编号：5211354"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_bcjc_nyjtjcb_xzqmc"
                android:textSize="16sp"
                android:textColor="#3D3D3D"
                android:layout_marginTop="3dp"
                android:text="黄山店村 333号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bcjc_nyjtjcb_issub"
            android:textColor="#409EFF"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="已提交"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_right_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>