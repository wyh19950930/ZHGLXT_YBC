<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".zjd.activity.UserListActivity">
    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_user_list_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/left_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="用户管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_act_user_list_search"
            android:layout_margin="10dp"
            android:background="@drawable/gray_user_edit_background"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_search_user"
            android:hint="请输入姓名/手机号"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerVertical="true"
            android:id="@+id/rlv_act_user_list_xzq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_user_list_qu"
            android:layout_marginLeft="20dp"
            android:textColor="#207FFF"
            android:textSize="16sp"
            android:text="区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:id="@+id/tv_user_list_qujian"
            android:text="->"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_user_list_zhen"
            android:layout_marginLeft="5dp"
            android:textColor="#207FFF"
            android:textSize="16sp"
            android:text="镇"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:id="@+id/tv_user_list_zhenjian"
            android:text="->"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_user_list_cun"
            android:layout_marginLeft="5dp"
            android:textColor="#207FFF"
            android:textSize="16sp"
            android:text="村"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:id="@+id/ll_user_list_add"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/ic_user_add"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="新增用户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scl_user_list"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_user_list_xzq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@color/white"
                    android:id="@+id/rlv_user_list_xzq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_user_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <androidx.recyclerview.widget.RecyclerView
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:id="@+id/rlv_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_user_list_up"
                android:src="@drawable/ic_shi_up"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <ImageView
                android:id="@+id/iv_user_list_down"
                android:src="@drawable/ic_shi_down"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>
