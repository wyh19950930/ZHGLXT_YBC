<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/mapback_ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="14.5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center">
            <TextView
                android:id="@+id/item_xxcj_clxxadd_name"
                android:textSize="16sp"
                android:textColor="#333333"
                android:text="王娟"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/item_xxcj_clxxadd_lx"
                android:textSize="12sp"
                android:textColor="#666666"
                android:src="@drawable/xxcj_mtc_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="14.5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center">
            <TextView
                android:id="@+id/item_xxcj_clxxadd_cph"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="xx888888"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_xxcj_clxxadd_pp"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="凤凰牌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34.5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/item_xxcj_clxxadd_update"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="修改"
                android:textSize="16sp"
                android:textColor="#FF660F"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="18dp"
                android:background="#e0e0e0"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/item_xxcj_clxxadd_delete_lc"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="删除"
                android:textSize="16sp"
                android:textColor="#FF5458"
                />
            <TextView
                android:id="@+id/item_xxcj_clxxadd_delete"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="删除"
                android:textSize="16sp"
                android:textColor="#FF5458"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#F6F7FB"/>
    </LinearLayout>

</LinearLayout>