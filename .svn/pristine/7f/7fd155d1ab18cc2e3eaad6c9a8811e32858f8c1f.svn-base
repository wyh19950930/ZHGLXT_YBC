<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_environmental2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:background="@drawable/popback"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:textStyle="bold"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:gravity="center"
              android:text="驳回处理"
              android:layout_width="match_parent"
              android:layout_height="40dp"/>
          <View
              android:background="@color/gray"
              android:layout_width="match_parent"
              android:layout_height="0.2dp"/>

          <LinearLayout
              android:minHeight="50dp"
              android:id="@+id/ll_remark_fan_jian"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="8dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="驳回原因:"
                  android:textSize="15sp"
                  android:textStyle="bold" />

              <EditText
                  android:id="@+id/tv_bhyy_fan_jian"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="8dp"
                  android:layout_weight="2"
                  android:clickable="true"
                  android:hint="驳回原因"
                  android:textSize="15sp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@id/ll_pop_environmental2">

              <Button
                  android:id="@+id/bt_close_fan_jian_xz"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_weight="1"
                  android:background="@color/gray"
                  android:text="关闭" />

              <Button
                  android:id="@+id/bt_upload_fan_jian_xz"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_weight="1"
                  android:background="@color/blue"
                  android:text="驳回"
                  android:textColor="@color/white" />
              <!--            确定-->
          </LinearLayout>
      </LinearLayout>

    </ScrollView>
</RelativeLayout>