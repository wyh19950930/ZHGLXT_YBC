<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/popback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="审批"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#000000"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/pop_sqgl_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:textColor="#000000"
            android:numeric="decimal"
            />

    </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:padding="1dip"
              android:layout_centerHorizontal="true"
              android:id="@+id/pop_sqgl_photo"
              android:scaleType="centerCrop"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:background="@drawable/add_image"
              android:adjustViewBounds="true"
              />

          <ImageButton
              android:id="@+id/pop_sqgl_delete_photo"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_alignEnd="@+id/pop_sqgl_photo"
              android:layout_alignParentTop="true"
              android:background="@null"
              android:src="@drawable/delete_r"
              android:visibility="gone"
              />

      </RelativeLayout>

        <TextView
            android:id="@+id/pop_sqgl_photo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="备案拍照存留"
            />

        <RelativeLayout
            android:id="@+id/pop_sqgl_rlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <ImageView
                android:padding="1dip"
                android:layout_centerHorizontal="true"
                android:id="@+id/pop_sqgl2_photo"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/add_image"
                android:adjustViewBounds="true"
                />

            <ImageButton
                android:id="@+id/pop_sqgl2_delete_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/pop_sqgl2_photo"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:src="@drawable/delete_r" />

        </RelativeLayout>

        <TextView
            android:id="@+id/pop_sqgl_photo_two_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="备案拍照存留"
            />



    <Button
        android:id="@+id/pop_sqgl_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/bt_actiive_blue"
        android:text="确定"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        />

    </LinearLayout>
    </ScrollView>
</LinearLayout>