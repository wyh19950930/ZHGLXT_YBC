<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popback"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="40dp">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="筛选结果"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_pop_xzbb_error"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/error_center_x"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:minHeight="200dp"
            android:maxHeight="500dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:minHeight="150dp"
                android:id="@+id/tv_pop_xzbb_sbject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="10dp"
                android:visibility="gone"
                android:textColor="@color/red"
                android:text="下载路径："
                android:id="@+id/tv_pop_xzbb_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_pop_xzbb_cancel"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="#FF660F"
            android:text="取消"
            style="@style/table_title_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_pop_xzbb_download"
            style="@style/table_title_textview"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:gravity="center"
                android:drawableRight="@drawable/xzbd"
                android:textColor="#4CA2FE"
                android:text="下载表单"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>