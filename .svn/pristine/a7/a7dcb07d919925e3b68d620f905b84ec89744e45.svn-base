        android:textSize="13dp"
        android:textColor="@color/white"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textStyle="bold"
        android:text="1000"
        android:background="@drawable/ic_hbjc_dcl_hs"
        />

</RelativeLayout>