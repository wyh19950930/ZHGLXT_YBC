<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_bcjc_reject_title"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="驳回"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="处理人"
                android:textColor="#333333"
                android:gravity="center"/>

            <EditText
                android:id="@+id/et_pop_bcjc_reject_clr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pop_bcjc_reject_bhyy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="驳回原因"
                android:textColor="#333333"
                android:gravity="center"/>

            <EditText
                android:id="@+id/pop_bcjc_reject_et_reject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                />

        </LinearLayout>

    </LinearLayout>


    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pop_bcjc_reject_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="确定"
            android:textColor="#12C483"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="#E0E0E0"/>
        <TextView
            android:id="@+id/pop_bcjc_reject_close"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>