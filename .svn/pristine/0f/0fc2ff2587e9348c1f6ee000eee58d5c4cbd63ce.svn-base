<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ldrkgl.home.activity.SendMessageActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingRight="10dp"
            android:id="@+id/iv_act_send_message_fbxx"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="发布消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_act_send_mess_issue"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text="发布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:text="请选择接收人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_marginLeft="10dp"
            android:minWidth="100dp"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:id="@+id/sp_act_send_mess_jsr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_drop_down_shape"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:src="@drawable/title_send_message"
            android:layout_marginLeft="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <EditText
            android:id="@+id/et_act_send_mess_title"
            android:maxLength="50"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@drawable/mapback_ffffff"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:src="@drawable/xxnr_send_message"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <EditText
            android:id="@+id/et_act_send_mess_srxq"
            android:gravity="top"
            android:maxLength="500"
            android:layout_marginLeft="35dp"
            android:background="@null"
            android:hint="请输入详情"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/red"
            android:id="@+id/tv_act_send_mess_zs"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="0/500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/image_send_message"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="添加图片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_act_send_message_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>