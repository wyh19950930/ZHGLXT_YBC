<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/dl_frag_project"
    tools:context="com.jymj.zhglxt.ui.fragment.ProjectFragment">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="基本情况"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18.5sp"
            android:transitionName="title"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_frag_project_right"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/status_bar_xm"
            android:padding="15dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ll_frag_project_fl_content"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--右边抽屉菜单-->
    <LinearLayout
        android:id="@+id/ll_frag_project_menu_right"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ll_frag_project_menu_listView_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout >
